<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Document</title>
    
       <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-zinc-900 text-white">
  <div class="w-full h-full bg-zinc-900 text-white p-10 ">
    <div>
    <a href="/" class="text-blue-500">Back to user</a>
    </div>
    <h1>all users</h1>
    <div class="users flex flex-wrap gap-4">

     <%users.forEach(function(user){ %>
 <div class="user w-72 p-4 bg-zinc-800 rounded-md">
        <div class="w-full h-52 rounded-lg bg-zinc-500">
  <img src="<%= user.image %>" alt="user image" class="w-full h-full object-cover rounded-lg"/>
        </div>
<h3 class="text-xl mt-3 tracking-tight"><%= user.name %></h3>
<h5 class="text-zinc-400"><%= user.email %></h5>
<div class="flex gap-3 mt-10">
  <a href="/edit/<%= user._id %>" class="text-blue-500">Update</a>
  <a href="/delete/<%= user._id %>" class="text-red-500">Delete</a>
</div>
      </div>
    <% })%>

   


    </div>

    
    
  </div>
</body>
</html>